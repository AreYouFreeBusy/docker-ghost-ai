{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "string",
            "metadata": {
                "description": "Specify the application name.",
                "name": "Application name"
            }
        },
        "hostingPlanName": {
            "type": "string",
            "metadata": {
                "description": "Specify the App Hosting Plan Name.",
                "name": "App Hosting Plan name"
            }
        },
        "hostingPlanSku": {
            "type": "string",
            "metadata": {
                "description": "Specify the App Hosting Plan SKU. Free and Shared hosting plans don't support Web App for Containers.",
                "name": "App Hosting Plan SKU"
            },
            "defaultValue": "B1",
            "allowedValues": [
                "B1",
                "B2",
                "B3",
                "S1",
                "S2",
                "S3",
                "P1v2",
                "P2v2",
                "P3v2"
            ]
        },
        "applicationInsightsName": {
            "type": "string",
            "metadata": {
                "description": "Specify the name of the Application Insights to use for function application.",
                "name": "Application Insights name"
            }
        },
        "workspaceId": {
            "type": "string",
            "metadata": {
                "description": "Log Analytics workspace ID to send the diagnostic logs.",
                "name": "Workspace Id"
            }
        },
        "cdnProfileName": {
            "type": "string",
            "metadata": {
                "description": "Specify the Azure CDN profile name.",
                "name": "Azure CDN profile"
            }
        },
        "cdnSku": {
            "type": "object",
            "metadata": {
                "description": "Specify the Azure CDN SKU.",
                "name": "Azure CDN SKU"
            }
        },
        "cdnEndpointName": {
            "type": "string",
            "metadata": {
                "description": "Specify the Azure CDN endpoint name.",
                "name": "Azure CDN endpoint"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "name": "[parameters('appName')]",
            "apiVersion": "2018-11-01",
            "location": "[resourceGroup().location]",
            "kind": "linux",
            "dependsOn": [
                "[parameters('hostingPlanName')]",
                "[parameters('applicationInsightsName')]"
            ],
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "siteConfig": {
                    "http20Enabled": true,
                    "minTlsVersion": "1.2",
                    "ftpsState": "Disabled",
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(resourceId('microsoft.insights/components/', parameters('applicationInsightsName')), '2018-05-01-preview').InstrumentationKey]"
                        },
                        {
                            "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                            "value": "[reference(resourceId('microsoft.insights/components/', parameters('applicationInsightsName')), '2018-05-01-preview').ConnectionString]"
                        },
                        {
                            "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "XDT_MicrosoftApplicationInsights_Mode",
                            "value": "default"
                        }
                    ]
                },
                "name": "[parameters('appName')]",
                "clientAffinityEnabled": false,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
                "httpsOnly": true,
                "enabled": true
            },
            "resources": [
                {
                    "type": "providers/diagnosticSettings",
                    "name": "[concat('Microsoft.Insights/', 'AppDiagnostics')]",
                    "apiVersion": "2017-05-01-preview",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[parameters('appName')]"
                    ],
                    "properties": {
                        "workspaceId": "[parameters('workspaceId')]",
                        "metrics": [
                            {
                                "category": "AllMetrics",
                                "enabled": true
                            }
                        ],
                        "logs": [
                            {
                                "category": "AppServiceHTTPLogs",
                                "enabled": true
                            },
                            {
                                "category": "AppServiceConsoleLogs",
                                "enabled": true
                            },
                            {
                                "category": "AppServiceAppLogs",
                                "enabled": true
                            },
                            {
                                "category": "AppServiceFileAuditLogs",
                                "enabled": true
                            },
                            {
                                "category": "AppServiceAuditLogs",
                                "enabled": true
                            },
                            {
                                "category": "AppServiceIPSecAuditLogs",
                                "enabled": true
                            },
                            {
                                "category": "AppServicePlatformLogs",
                                "enabled": true
                            }
                        ]
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "name": "[parameters('hostingPlanName')]",
            "apiVersion": "2018-02-01",
            "location": "[resourceGroup().location]",
            "kind": "linux",
            "properties": {
                "name": "[parameters('hostingPlanName')]"
            },
            "sku": {
                "name": "[parameters('hostingPlanSku')]"
            },
            "resources": [
                {
                    "name": "[concat('Microsoft.Insights/', 'HostingPlanDiagnostics')]",
                    "type": "providers/diagnosticSettings",
                    "apiVersion": "2017-05-01-preview",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[parameters('hostingPlanName')]"
                    ],
                    "properties": {
                        "workspaceId": "[parameters('workspaceId')]",
                        "metrics": [
                            {
                                "category": "AllMetrics",
                                "enabled": true
                            }
                        ],
                        "logs": []
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Insights/components",
            "name": "[parameters('applicationInsightsName')]",
            "apiVersion": "2020-02-02-preview",
            "location": "[resourceGroup().location]",
            "kind": "web",
            "properties": {
                "ApplicationId": "[parameters('appName')]",
                "Application_Type": "web",
                "WorkspaceResourceId": "[parameters('workspaceId')]"
            },
            "resources": [
                {
                    "name": "[concat('Microsoft.Insights/', 'InsightsDiagnostics')]",
                    "type": "providers/diagnosticSettings",
                    "apiVersion": "2017-05-01-preview",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[parameters('applicationInsightsName')]"
                    ],
                    "properties": {
                        "workspaceId": "[parameters('workspaceId')]",
                        "metrics": [
                            {
                                "category": "Availability",
                                "enabled": true
                            },
                            {
                                "category": "Browser",
                                "enabled": true
                            },
                            {
                                "category": "Server",
                                "enabled": true
                            },
                            {
                                "category": "Failures",
                                "enabled": true
                            },
                            {
                                "category": "Usage",
                                "enabled": true
                            },
                            {
                                "category": "Performance counters",
                                "enabled": true
                            }
                        ],
                        "logs": [
                            {
                                "category": "AppAvailabilityResults",
                                "enabled": true
                            },
                            {
                                "category": "AppBrowserTimings",
                                "enabled": true
                            },
                            {
                                "category": "AppEvents",
                                "enabled": true
                            },
                            {
                                "category": "AppMetrics",
                                "enabled": true
                            },
                            {
                                "category": "AppDependencies",
                                "enabled": true
                            },
                            {
                                "category": "AppExceptions",
                                "enabled": true
                            },
                            {
                                "category": "AppPageViews",
                                "enabled": true
                            },
                            {
                                "category": "AppPerformanceCounters",
                                "enabled": true
                            },
                            {
                                "category": "AppRequests",
                                "enabled": true
                            },
                            {
                                "category": "AppSystemEvents",
                                "enabled": true
                            },
                            {
                                "category": "AppTraces",
                                "enabled": true
                            }
                        ]
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Cdn/profiles",
            "name": "[parameters('cdnProfileName')]",
            "apiVersion": "2020-04-15",
            "location": "[resourceGroup().location]",
            "sku": "[parameters('cdnSku')]",
            "properties": {},
            "resources": [
                {
                    "type": "Microsoft.Cdn/profiles/endpoints",
                    "name": "[concat(parameters('cdnProfileName'),'/',parameters('cdnEndpointName'))]",
                    "apiVersion": "2020-04-15",
                    "dependsOn": [
                        "[parameters('cdnProfileName')]",
                        "[parameters('appName')]"
                    ],
                    "location": "[resourceGroup().location]",
                    "properties": {
                        "isHttpAllowed": false,
                        "isHttpsAllowed": true,
                        "originHostHeader": "[reference(parameters('appName')).hostNames[0]]",
                        "origins": [
                            {
                                "name": "[parameters('appName')]",
                                "properties": {
                                    "hostName": "[reference(parameters('appName')).hostNames[0]]",
                                    "httpPort": 80,
                                    "httpsPort": 443
                                }
                            }
                        ],
                        "isCompressionEnabled": true,
                        "contentTypesToCompress": [
                            "application/eot",
                            "application/font",
                            "application/font-sfnt",
                            "application/javascript",
                            "application/json",
                            "application/opentype",
                            "application/otf",
                            "application/pkcs7-mime",
                            "application/truetype",
                            "application/ttf",
                            "application/vnd.ms-fontobject",
                            "application/xhtml+xml",
                            "application/xml",
                            "application/xml+rss",
                            "application/x-font-opentype",
                            "application/x-font-truetype",
                            "application/x-font-ttf",
                            "application/x-httpd-cgi",
                            "application/x-javascript",
                            "application/x-mpegurl",
                            "application/x-opentype",
                            "application/x-otf",
                            "application/x-perl",
                            "application/x-ttf",
                            "font/eot",
                            "font/ttf",
                            "font/otf",
                            "font/opentype",
                            "image/svg+xml",
                            "text/css",
                            "text/csv",
                            "text/html",
                            "text/javascript",
                            "text/js",
                            "text/plain",
                            "text/richtext",
                            "text/tab-separated-values",
                            "text/xml",
                            "text/x-script",
                            "text/x-component",
                            "text/x-java-source"
                        ]
                    },
                    "resources": [
                        {
                            "type": "providers/diagnosticSettings",
                            "apiVersion": "2017-05-01-preview",
                            "name": "[concat('Microsoft.Insights/', 'EndpointDiagnostics')]",
                            "location": "[resourceGroup().location]",
                            "dependsOn": [
                                "[parameters('cdnEndpointName')]"
                            ],
                            "properties": {
                                "workspaceId": "[parameters('workspaceId')]",
                                "metrics": [],
                                "logs": [
                                    {
                                        "category": "CoreAnalytics",
                                        "enabled": true
                                    }
                                ]
                            }
                        }
                    ]
                },
                {
                    "type": "providers/diagnosticSettings",
                    "name": "[concat('Microsoft.Insights/', 'ProfileDiagnostics')]",
                    "apiVersion": "2017-05-01-preview",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[parameters('cdnProfileName')]"
                    ],
                    "properties": {
                        "workspaceId": "[parameters('workspaceId')]",
                        "metrics": [],
                        "logs": [
                            {
                                "category": "AzureCdnAccessLog",
                                "enabled": true
                            }
                        ]
                    }
                }
            ]
        }
    ],

    "outputs": {
        "principalId": {
            "type": "string",
            "value": "[reference(concat(resourceId('Microsoft.Web/sites/', parameters('appName')), '/providers/Microsoft.ManagedIdentity/Identities/default'), '2015-08-31-PREVIEW').principalId]"
        },
        "hostName": {
            "type": "string",
            "value": "[reference(parameters('cdnEndpointName')).hostName]"
        },
        "originHostHeader": {
            "type": "string",
            "value": "[reference(parameters('cdnEndpointName')).originHostHeader]"
        }
    }
}
